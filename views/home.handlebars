<h4>{{title}}</h4>

<form action="/api/members" method="POST" class="mb-4">
    <div class="form-group ">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group ">
        <label for="age">Age</label>
        <input type="number" name="age" class="form-control">
    </div>
    <input type="submit" value="Add new member" class="btn btn-primary btn-block">
</form>
<ul class="list-group">
    {{#each members}}
    <li class="list-group-item">{{this.name}} is {{this.age}} </li>
    {{/each}}
</ul>


<a href="/api/members" class="btn btn-light mt-4">Visit API</a>
